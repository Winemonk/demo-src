<Window
    x:Class="TestConfigurableOptions.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestConfigurableOptions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <WrapPanel>
            <Button
                x:Name="buttonTestConfigureOptions"
                Margin="10"
                Click="buttonTestConfigureOptions_Click"
                Content="Test Configure Options" />
            <Button
                x:Name="buttonTestOptionsMonitorSettings"
                Margin="10"
                Click="buttonTestOptionsMonitorSettings_Click"
                Content="Test Options Monitor Settings" />
        </WrapPanel>
    </Grid>
</Window>
