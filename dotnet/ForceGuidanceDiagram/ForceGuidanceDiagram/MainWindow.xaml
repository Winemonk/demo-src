<Window
    x:Class="ForceGuidanceDiagram.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ForceGuidanceDiagram"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="960"
    Height="540"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="20" Orientation="Vertical">
            <Label Content="节点个数：" />
            <TextBox
                x:Name="nodeNumTextBox"
                Margin="6"
                Text="30" />
            <Label Content="关系个数：" />
            <TextBox
                x:Name="relationNumTextBox"
                Margin="6"
                Text="18" />
            <Label Content="迭代次数：" />
            <TextBox
                x:Name="iterationNumTextBox"
                Margin="6"
                Text="300" />
            <Label Content="显示次数间隔：" />
            <TextBox
                x:Name="displayIntervalTextBox"
                Margin="6"
                Text="30" />
            <CheckBox
                x:Name="onlyDisplayIterationNodeCheckBox"
                Margin="6"
                Content="只显示关系节点" />
            <Button
                x:Name="generateButton"
                Margin="6"
                Click="generateButton_Click"
                Content="生成" />
            <Button
                x:Name="generateRegularButton"
                Margin="6"
                Click="generateRegularButton_Click"
                Content="规则节点" />
            <Button
                x:Name="iterationButton"
                Margin="6"
                Click="iterationButton_Click"
                Content="迭代" />
            <Button
                x:Name="disorganizeButton"
                Margin="6"
                Click="disorganizeButton_Click"
                Content="打乱" />
            <Button
                x:Name="clearButton"
                Margin="6"
                Click="clearButton_Click"
                Content="清空" />
            <Button
                x:Name="zoominButton"
                Margin="6"
                Click="zoominButton_Click"
                Content="放大" />
            <Button
                x:Name="zoomoutButton"
                Margin="6"
                Click="zoomoutButton_Click"
                Content="缩小" />
        </StackPanel>
        <ScrollViewer
            Grid.Column="1"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="ucGraphCanvas" Margin="0,0,0,0" />
            <!--  Width="3200" Height="2000"  -->
        </ScrollViewer>

    </Grid>
</Window>
