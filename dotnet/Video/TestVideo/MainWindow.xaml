<Window
    x:Class="TestVideo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestVideo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <MediaElement
            Name="mediaElement"
            LoadedBehavior="Manual"
            Stretch="Uniform"
            UnloadedBehavior="Stop" />

        <Slider
            Name="progressSlider"
            Grid.Row="1"
            VerticalAlignment="Bottom"
            Maximum="1"
            Minimum="0"
            ValueChanged="ProgressSlider_ValueChanged"
            Value="0" />

        <StackPanel
            Grid.Row="2"
            VerticalAlignment="Bottom"
            Background="Gray"
            Orientation="Horizontal">
            <Button
                Name="btnSelectFile"
                Click="BtnSelectFile_Click"
                Content="选择视频" />
            <Button
                Name="btnPlay"
                Click="BtnPlay_Click"
                Content="播放" />
            <Button
                Name="btnPause"
                Click="BtnPause_Click"
                Content="暂停" />
            <Button
                Name="btnStop"
                Click="BtnStop_Click"
                Content="停止" />
            <Button
                Name="btnFastForward"
                Click="BtnFastForward_Click"
                Content="快进" />
            <Button
                Name="btnRewind"
                Click="BtnRewind_Click"
                Content="快退" />
            <Button
                Name="btnFullScreen"
                Click="BtnFullScreen_Click"
                Content="全屏" />
            <Button
                Name="btnExitFullScreen"
                Click="BtnExitFullScreen_Click"
                Content="退出全屏" />
            <ComboBox
                Name="speedComboBox"
                Width="100"
                SelectionChanged="SpeedComboBox_SelectionChanged">
                <ComboBoxItem Content="0.5x" />
                <ComboBoxItem Content="1x" IsSelected="True" />
                <ComboBoxItem Content="1.5x" />
                <ComboBoxItem Content="2x" />
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
