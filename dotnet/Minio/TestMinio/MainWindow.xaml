<Window
    x:Class="MinioTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MinioTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:MinioTest.utils"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Header="上传">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <DockPanel Margin="10">
                    <Button
                        Command="{Binding SelectUploadFileCommand}"
                        Content="..."
                        Cursor="Hand"
                        DockPanel.Dock="Right" />
                    <TextBox IsReadOnly="True" Text="{Binding UploadFilePath}" />
                </DockPanel>
                <DockPanel
                    Grid.Row="1"
                    Margin="10,0,10,10"
                    HorizontalAlignment="Right"
                    LastChildFill="False">
                    <Button Command="{Binding UploadCommand}" Content="上传" />
                </DockPanel>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="控制台">
            <DataGrid
                AutoGenerateColumns="False"
                Background="#fff"
                CanUserAddRows="False"
                HeadersVisibility="None"
                IsReadOnly="True"
                ItemsSource="{Binding Source={StaticResource ConsoleUtil}, Path=ConsoleRows}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="auto" Binding="{Binding DateTime}" />
                    <DataGridTextColumn Width="auto" Binding="{Binding Level}" />
                    <DataGridTextColumn Width="*" Binding="{Binding Text}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox
            Grid.RowSpan="2"
            Grid.Column="1"
            Header="目录">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Margin="0,3,3,3"
                        Command="{Binding RefreshFileListViewCommand}"
                        Content="刷新" />
                    <Button
                        Margin="0,3,3,3"
                        Command="{Binding DownloadCommand}"
                        Content="下载" />
                    <Button
                        Margin="0,3,3,3"
                        Command="{Binding RemoveCommand}"
                        Content="删除" />
                </StackPanel>
                <ListView
                    Grid.Row="1"
                    ItemsSource="{Binding Files}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding File}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="72">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="pack://application:,,,/MinioTest;component/resources/file@32.png"
                                    ToolTip="{Binding FileName}" />
                                <DockPanel Grid.Row="1" HorizontalAlignment="Center">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Text="{Binding FileName}"
                                        ToolTip="{Binding FileName}" />
                                </DockPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
