<Window
    x:Class="TestSocketClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestSocketClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Client"
    Width="600"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10">
            <TextBlock Text="IP" />
            <TextBox
                x:Name="textBoxIP"
                Text="81.70.35.77"
                Visibility="Collapsed" />
            <TextBox Text="81.99.57.66" />
            <TextBlock Text="端口" />
            <TextBox x:Name="textBoxPort" Text="6666" />
            <UniformGrid Margin="0,10" Columns="2">
                <Button
                    x:Name="buttonConnect"
                    Click="buttonConnect_Click"
                    Content="连  接" />
                <Button
                    x:Name="buttonClose"
                    Click="buttonClose_Click"
                    Content="关  闭"
                    IsEnabled="False" />
            </UniformGrid>
            <Button
                x:Name="buttonSend"
                Click="buttonSend_Click"
                Content="发  送"
                IsEnabled="False" />
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBox x:Name="textBoxConsole" IsReadOnly="True" />
            <TextBox x:Name="textBoxInput" Grid.Row="1" />
        </Grid>
    </Grid>
</Window>
