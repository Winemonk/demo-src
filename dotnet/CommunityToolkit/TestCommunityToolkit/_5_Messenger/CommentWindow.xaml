<Window
    x:Class="TestCommunityToolkit._5_Messenger.CommentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestCommunityToolkit._5_Messenger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CommentWindow"
    Width="400"
    Height="250"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="Author:" />
        <TextBox
            Grid.Column="1"
            Margin="3"
            Text="{Binding Author, UpdateSourceTrigger=LostFocus}" />
        <Label Grid.Row="1" Content="Email:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="3"
            Text="{Binding Email, UpdateSourceTrigger=LostFocus}" />
        <Label Grid.Row="2" Content="Text:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            Height="100"
            Margin="3"
            AcceptsReturn="True"
            Text="{Binding Text, UpdateSourceTrigger=LostFocus}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            Margin="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="3"
                Command="{Binding SubmitCommentCommand}"
                Content="Submit"
                IsDefault="True" />
            <Button
                Margin="3"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
